- content_for :page_title
  = t("#{state}_applications.detail.title")

header
  h1.govuk-heading-xl
    =@application.reference
    |&nbsp;-&nbsp;
    =t("#{state}_applications.detail.title")

=build_section_with_defaults 'Personal details', @applicant
=build_section_with_defaults 'Application details', @details
=build_section 'Benefits', @application_view, ['benefits', 'paper_evidence']
=build_section 'Income', @application_view, ['number_of_children', 'total_monthly_income', 'total_monthly_income_from_evidence']
=build_section 'Result', @application_view, ['benefits_result', 'savings_result', 'income_result']

=render(partial: 'shared/remission_type', locals: { source: @result })

=render(partial: 'shared/processed_summary', locals: { source: @processing_details })
