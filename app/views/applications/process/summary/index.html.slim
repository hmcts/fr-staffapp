- content_for :page_title
  = "Check details"

h1.govuk-heading-xl Check details

- personal_link = { url: application_personal_informations_path(@application) }
- litigation_link = { url: application_litigation_details_path(@application) }

=build_section_with_custom_links 'Personal details', @applicant,
  [ { key:'full_name', link_attributes: personal_link },
    { key:'date_of_birth', link_attributes: personal_link },
    { key:'ni_number', link_attributes: personal_link },
    { key:'status', link_attributes: personal_link },
    { key:'litigation_friend_details', link_attributes: litigation_link } ]


=build_section_with_defaults 'Application details', @details, application_details_path(@application)
- if display_savings?(@application)
  =build_section_with_defaults 'Savings and investments', @savings, application_savings_investments_path(@application)

-if @application.saving.passed?
  =build_section_with_defaults 'Benefits', @benefits, application_benefits_path(@application)
  -if !@application.benefits
    =build_section_with_defaults 'Income', @income, application_incomes_path(@application)

= form_for @application, url: application_summary_path(@application), method: :post do |f|
  = f.submit 'Complete processing', class: 'govuk-button'

- content_for(:javascripts)
  javascript:
    $(document).ready(function () {
      googleDataLayerPush.init()
    });
