header
  h2.heading-xlarge Public application stats

.govuk-grid-row.equal-heightboxes.util_mt-medium
  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Public applications to date
        .panel-inner
          h4.heading-xlarge.util_mt-0.util_mb-small =@data.submission_all_time_total

  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Public applications last 7 days
        .panel-inner
          h4.heading-xlarge.util_mt-0.util_mb-small =@data.submission_seven_day_total

.govuk-grid-row.equal-heightboxes.util_mt-medium
  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Processed to date
        .panel-inner
          table
            caption.visuallyhidden Public applications processed to date
            thead
              tr
                th Court
                th Number
            tbody
              -@data.submission_all_time.each do |court|
                tr
                  td =court[0]
                  td =court[1]

  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Processed last 7 days
        .panel-inner
          table
            caption.visuallyhidden Public applications processed last 7 days
            thead
              tr
                th Court
                th Number
            tbody
              -@data.submission_seven_day.each do |court|
                tr
                  td =court[0]
                  td =court[1]

.govuk-grid-row.equal-heightboxes.util_mt-medium
  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Average processing time to date
        .panel-inner
          table
            caption.visuallyhidden Average processing time to date
            thead
              tr
                th Court
                th Time (hh:mm:ss)
            tbody
              -@data.submission_total_time_taken.each do |court|
                tr
                  td =court[0]
                  td =court[1][0...-7]

  .govuk-grid-column-one-half
    .util_pt-medium
      .panel.flexi
        h3.heading-medium.util_mt-0 Average processing time last 7 days
        .panel-inner
          table
            caption.visuallyhidden Average processing time last 7 days
            thead
              tr
                th Court
                th Time (hh:mm:ss)
            tbody
              -@data.submission_seven_day_time_taken.each do |court|
                tr
                  td =court[0]
                  td =court[1][0...-7]
